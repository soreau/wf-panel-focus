<?xml version="1.0"?>
<wayfire>
	<plugin name="panel-focus">
		<_short>Panel Focus</_short>
		<_long>A plugin to cycle through desktop panels.</_long>
		<category>Accessibility</category>
		<option name="cycle" type="activator">
			<_short>Cycle</_short>
			<_long>Cycles through desktop panel focus.</_long>
			<default>&lt;ctrl&gt; &lt;alt&gt; KEY_TAB</default>
		</option>
		<option name="deactivate" type="activator">
			<_short>Deactivate</_short>
			<_long>Deactivates panel focus.</_long>
			<default>&lt;ctrl&gt; &lt;alt&gt; KEY_ESC</default>
		</option>
		<option name="panel_focus_exclusions" type="string">
			<_short>Exclude Panel Focus Views</_short>
			<_long>Criteria for views that the cycle activator will not focus.</_long>
			<default>app_id is "panel"</default>
		</option>
	</plugin>
</wayfire>
